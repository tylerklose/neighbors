    <%= form.label :primary_member_last_name %>
    <%= form.text_field :primary_member_last_name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :primary_member_age %>
    <%= form.number_field :primary_member_age, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :home_address %>
    <%= form.text_field :home_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :email_address %>
    <%= form.text_field :email_address, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.label :phone_number %>
    <%= form.text_field :phone_number, class: 'form-control' %>
