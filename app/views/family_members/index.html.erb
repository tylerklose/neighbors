<p id="notice"><%= notice %></p>

<h1>Family Members</h1>

<table class='table'>
  <thead>
    <tr>
      <th scope='col'>First name</th>
      <th scope='col'>Last name</th>
      <th scope='col'>Age</th>
      <th scope='col'>Working</th>
      <th scope='col'>Family</th>
      <th scope='col'>Relationship</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @family_members.each do |family_member| %>
      <tr>
        <th scope='col'><%= family_member.first_name %></td>
        <td><%= family_member.last_name %></td>
        <td><%= family_member.age %></td>
        <td><%= family_member.working %></td>
        <td><%= family_member.family %></td>
        <td><%= family_member.relationship %></td>
        <td><%= link_to 'Show', family_member %></td>
        <td><%= link_to 'Edit', edit_family_member_path(family_member) %></td>
        <td><%= link_to 'Destroy', family_member, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

